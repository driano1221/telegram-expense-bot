# Token do BotFather (Telegram)
TELEGRAM_BOT_TOKEN=123456:ABC-DEF

# Chave da API Groq (https://console.groq.com)
GROQ_API_KEY=gsk_xxx

# URL do PostgreSQL (Supabase ou qualquer Postgres com SSL)
DATABASE_URL=postgresql://user:pass@host:5432/postgres?sslmode=require

# (Opcional) Porta do health server (default: 8080)
PORT=8080

# (Opcional) IDs de usuarios autorizados, separados por virgula
# Se vazio ou ausente, qualquer usuario pode usar o bot
# Para descobrir seu ID: mande /start e veja os logs, ou use @userinfobot
ALLOWED_USERS=

# (Opcional) Rate limiting: mensagens por janela de tempo
RATE_LIMIT_MSGS=5
RATE_LIMIT_WINDOW=60
